---
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blogs">;

const blog = Astro.props;
---

<a
  class="group flex flex-col rounded-md border p-2 transition-all hover:shadow-md hover:shadow-app-blue lg:hover:-translate-y-0.5 lg:hover:translate-x-0.5"
  href={`/blogs/${blog.slug}`}
>
  <p class="capitalize group-hover:text-app-blue">{blog.data.title}</p>
  <time class="text-app-white" datetime={blog.data.date.toISOString()}>
    {blog.data.date.toDateString()}
  </time>
</a>
